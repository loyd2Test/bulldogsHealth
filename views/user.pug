extends layoutU
block content

    main.col-md-9.ml-sm-auto.col-lg-10.px-4
        h1 My Info
        .table-responsive
            table.table.table-striped.table-sm
                thead
                tr
                th First Name
                th Last Name
                th Address
                th Phone
                th Birthday
                th Email
                th Password
                tbody
                    tr
                    td #{user.firstName}
                    td #{user.lastName}
                    td #{user.address}
                    td #{user.phone}
                    td #{user.birthday}
                    td #{user.email}
                    td #{showPass}
                    
