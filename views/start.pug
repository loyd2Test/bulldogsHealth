extends loginLayout
block content
  div(class="container-fluid bg-3 text-center")
    h2(style="text-align:center;padding:15px;") Job Openings (Sign up/in to apply)
    .table-responsive
      table.table.table-striped.table-sm
        thead
          tr
          th Job ID
          th Title
          th Location
          th Availability
          th Details
          th Certifications
        tbody
          tr
          td 01
          td Registered Nurse/RN
          td Orlando, FL
          td Open
          td 4 days a week, 12pm to 9pm
          td nursing degree

    div(data-aos="flip-up" data-aos-duration="1000" type ='help')
      h3(style='line-height: 1.2; font-size: 3.5vw;') How can we help you?
      form(action='/signUp/check', method='POST')
        div
          h4 Find a job
          input(type="radio", name="type" value='I' checked) 
        div
          h4 Find an employee
          input(type="radio", name="type" value='B')
        input.ghost-button(type='submit', value='Sign Up')
    br

