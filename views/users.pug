extends layout
block content
  main.col-md-9.ml-sm-auto.col-lg-10.px-4
    h2 Candidates
    .table-responsive
      table.table.table-striped.table-sm
        thead
          tr
          th User ID
          th First Name
          th Last Name
          th Email Address
        tbody
          each cand in cands
            tr
            td #{cand.id}
            td #{cand.firstName}
            td #{cand.lastName}
            td #{cand.email}
    
    h2 Add a user  
    body
      .container
        form(action='/', method='post')
          input.ghost-input(name='first', type='text', placeholder='Enter first name', required='y')
          br
          input.ghost-input(name='last', type='text', placeholder='Enter last name', required='y')
          br
          input.ghost-input(name='email', type='text', placeholder='Enter email', required='y')
          br
          input.ghost-button(type='submit', value='Create User')