extends layout1
block content
  main
   style.
    input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
    input[type=submit] {
    width: 100%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    input[type=submit]:hover {
    background-color: #45a049;
    }
    div {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
    }


  h2 Job Openings (Sign up/in to apply)
  .table-responsive
    table.table.table-striped.table-sm
      thead
        tr
        th Job ID
        th Title
        th Location
        th Availability
        th Details
        th Certifications
      tbody
        tr
        td 01
        td Registered Nurse/RN
        td Orlando, FL
        td Open
        td 4 days a week, 12pm to 9pm
        td nursing degree

  div(style="text-align:center;width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 10px solid #ccc;border-radius: 10px;border-color:#45a049;box-sizing: border-box;")
    h1 Join Now
    form(action='/', method='post')
          input.ghost-input(name='first', type='text', placeholder='Enter first name', required='y')
          br
          input.ghost-input(name='last', type='text', placeholder='Enter last name', required='y')
          br
          input.ghost-input(name='email', type='text', placeholder='Enter email', required='y')
          br
          br
          input.ghost-button(type='submit', value='Sign Up')
  br