extends loginLayout
block content
  main
   style.
    input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
    input[type=submit] {
    width: 100%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    input[type=submit]:hover {
    background-color: #45a049;
    }
    div {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
    }




  div(style="text-align:center;width: 100%;padding: 12px 20px;margin: 8px 0;display: inline-block;border: 10px solid #ccc;border-radius: 10px;border-color:#45a049;box-sizing: border-box;")
    //- h1 Join Now
    form(action='/signUp/new', method='POST')
          input.ghost-input(name='first', type='text', placeholder='First name', required='y')
          br
          input.ghost-input(name='last', type='text', placeholder='Last name', required='y')
          br
          input.ghost-input(name='email', type='text', placeholder='Email', required='y')
          br
          input.ghost-input(name='password', type='text', placeholder='Password', required='y')
          br
          input.ghost-input(name='passwordConfirm', type='text', placeholder='Password', required='y', class='text-light')
          br
          br
          input.ghost-button(type='submit', value='Sign Up')
  br